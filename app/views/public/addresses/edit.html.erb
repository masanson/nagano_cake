<h1>Public::Addresses#edit</h1>
<p>Find me in app/views/public/addresses/edit.html.erb</p>

<h2 class="mt-3">配送先編集</h2>
  <%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="postal_code">郵便番号</label>
      <%= f.text_area :postal_code, class:"form-control postal_code" %>
    </div>
    <div class="form-group">
      <label for="address">住所</label>
      <%= f.text_area :address, class:"form-control address" %>
    </div>
    <div class="form-group">
      <label for="name">宛名</label>
      <%= f.text_area :name, class:"form-control name" %>
    </div>
    <div class="form-group">
      <%= f.submit '編集完了', class:"btn btn-success" %>
    </div>
  <% end %>