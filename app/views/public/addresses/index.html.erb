<h1>Public::Addresses#index</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>
<h2 class="mt-3">配送先一覧/登録</h2>
  <%= form_with model: @address, url: public_addresses_path do |f| %>
    <div class="form-group">
      <label for="postal_code">郵便番号</label>
      <%= f.text_area :postal_code, class:"form-control postal_code" %>
    </div>
    <div class="form-group">
      <label for="address">住所</label>
      <%= f.text_area :address, class:"form-control address" %>
    </div>
    <div class="form-group">
      <label for="name">宛名</label>
      <%= f.text_area :name, class:"form-control name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <% @addresses.each do |address| %>
      <% if address.customer_id == current_customer.id %>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集", edit_public_address_path(address.id), class:"btn btn-sm btn-success edit_public_address.id" %></td>
          <td><%= link_to "削除", public_address_path(address.id), method: :delete, class:"btn btn-sm btn-danger destroy_public_address.id", "data-confirm" => "本当に消しますか?" %></td>
        </tr>
      </tbody>
      <% end %>
    <% end %>
</table>