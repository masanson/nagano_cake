<div class="container">
  <div class="row justify-content-center m-md-5">
    <div class="col-md-10 m-2">
      <h4 class="mt-3">配送先一覧/登録</h4>
      <%= form_with model: @address, url: public_addresses_path do |f| %>
      <table >
        <tbody>
          <tr>
            <th class="col-sm-4">郵便番号</th>
            <td class="col-sm-4"><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th class="col-sm-4">住所</th>
            <td class="col-sm-4"><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th class="col-sm-4">宛名</th>
            <td class="col-sm-4"><%= f.text_field :name %></td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-between">
        <div class="col-sm-6 py-2"><%= f.submit '新規登録', class:"btn btn-success" %></div>
      </div>
      <% end %>
      
      <table class="table table-bordered col-11">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
          <% @addresses.each do |address| %>
          <tbody>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集", edit_public_address_path(address.id), class:"btn btn-sm btn-success edit_public_address.id" %></td>
              <td><%= link_to "削除", public_address_path(address.id), method: :delete, class:"btn btn-sm btn-danger destroy_public_address.id", "data-confirm" => "本当に消しますか?" %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>