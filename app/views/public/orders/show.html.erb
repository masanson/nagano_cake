<div class="container">
  <h3>注文詳細</h3>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="row justify-content-between pt-5">
        <div class="col-9 px-2">
          <h4>注文情報</h4>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td>
                  <%= @order.postal_code %>
                  <%= @order.address %></br>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
            </tbody>
          </table>

          <div class=" py-3">
            <h4 class="m-2">注文内容</h4>
            <table class="table table-bordered col-7">
              <thead>
                <tr>
                  <th>商品</th>
                  <th>単価(税込)</th>
                  <th>個数</th>
                  <th>小計</th>
                </tr>
              </thead>
              <% @orders.each do |order| %>
              <tbody>
                <tr>
                  <td><%= order.item.name %></td>
                  <td><%= order.price %></td>
                  <td><%= order.amount %></td>
                  <td><%= order.subtotal %></td>
                </tr>
              </tbody>
              <% @total += order.subtotal %>
              <% end %>
            </table>
          </div>
        </div>

        <div class="col-3 pl-2">
          <h4>請求情報</h4>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th>商品合計</th>
                <th><%= @total %></th>
              </tr>
              <tr>
                <th>配送料</th>
                <th><%= @order.shipping_charge %></th>
              </tr>
              <tr>
                <th>ご請求額</th>
                <th><%= @order.total_amount %></th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>