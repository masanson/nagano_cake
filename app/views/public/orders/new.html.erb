<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<%= form_with model: @order, url: path do |f| %>
    
    <div class="form-group">
    <label for="paynment">支払方法</label>
      <%= f.label :payment_method, "クレジットカード" %>
      <%= f.radio_button :payment_method, "credit_card" %>
      <%= f.label :payment_method, "銀行振込" %>
      <%= f.radio_button :payment_method, "transfar" %>
    </div>
    
    <div class="form-group">
    <label for="order_address">お届け先</label>
      <%= f.label :my_address, "ご自身の住所" do %>
        <p>〒<%= order.custmer.postal_code %></p>
        <p><%= order.custmer.address %></p>
        <p>
          <%= order.custmer.first_name %>
          <%= order.custmer.last_name %>
        </p>
      <% end %>
      <%= f.radio_button :my_address, order.customer_id %>
      
      <%= f.label :registered_address, "登録済住所" do %>
        <%= f.select :registered_address, options_from_collection_for_select(Address.all, :id, :postal_code, :address, :name)  class:"form-control" %>
      <% end %>
      <%= f.radio_button :registered_address, "transfar" %>
    </div>
    
  <% end %>
