<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<%= form_with model: @order, url: check_public_orders_path do |f| %>
  <div class="form-group">
  <label for="paynment">支払方法</label>
    <%= f.label :payment_method, "クレジットカード" %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, "銀行振込" %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  </div>
  
  <div class="form-group">
  <label for="order_address">お届け先</label>
    <%= f.label :select_address, "ご自身の住所" do %>
      <p>〒<%= current_customer.postal_code %></p>
      <p><%= current_customer.address %></p>
      <p>
        <%= current_customer.last_name %>
        <%= current_customer.first_name %>
      </p>
    <% end %>
    <%= f.radio_button :select_address, 0 %>
  </div>
  
  <div class="form-group">
    <%= f.label :select_address, "登録済住所" do %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), class:"form-control" %>
    <% end %>
    <%= f.radio_button :select_address, 1 %>
  </div>
  
  <div class="form-group">
    <%= f.label :select_address, "新規住所" do %>
      <label for="postal_code">郵便番号</label>
      <%= f.text_field :postal_code %>
      <label for="address">住所</label>
      <%= f.text_field :address %>
      <label for="name">宛名</label>
      <%= f.text_field :name %>
    <% end %>
    <%= f.radio_button :select_address, 2 %>
  </div>
  <div class="form-group"></div>
  
  <%= f.submit '注文詳細', class:"btn btn-success" %>
<% end %>
