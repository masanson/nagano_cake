
<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @order, url: check_public_orders_path do |f| %>
    <div class="col-lg-11">
      <h4>注文情報入力</h4>
      <div class="row ">
        <div class="col-12 py-1">
          <label for="paynment">支払方法</label>
            <div>
              <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, "クレジットカード" %>
            </div>
            <div>
              <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method, "銀行振込" %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 py-1">
          <label>お届け先</label>
          <div class="py-1">
            <%= f.radio_button :select_address, 0 %>
            <label>ご自身の住所</label>
            <div>
              <%= f.label :select_address, "ご自身の住所" do %>
                <p>
                  〒 <%= current_customer.postal_code %>
                  <%= current_customer.address %></br>
                  <%= current_customer.name %>
                </p>
              <% end %>
            </div>
          </div>
          <div class="py-1">
            <%= f.radio_button :select_address, 1 %>
            <label>登録済住所から選択</label>
            <div>
              <%= f.label :select_address, "登録済住所" do %>
              <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display), class:"form-control" %>
              <% end %>
            </div>
          </div>
          <div class="py-1">
            <%= f.radio_button :select_address, 2 %>
            <label>新しいお届け先</label>
              <%= f.label :select_address, "新規住所" do %>
              <div>
                <label for="postal_code">郵便番号(ハイフンなし)</label>
                <%= f.text_field :postal_code %>
              </div>
              <div>
                <label>住所</label>
                <%= f.text_field :address %>
              </div>
              <div>
                <label for="name">宛名</label>
                <%= f.text_field :name %>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <div><%= f.submit '確認画面に進む', class:"btn btn-primary" %></div>
    <% end %>
  </div>
</div>
