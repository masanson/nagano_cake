<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>



<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= @cart_items.each do |cart_item| %>
      <td>
        <%= image_tag cart_item.item.get_sweets_image(100, 100) do %>
        <%= image_tag cart_item.item.name %>
      </td>
      <td><%= cart_item.item.price %></td>
      <td>
        <%= form_with model: cart_item, url: public_cart_items_path, method: :patch do |f| %>
          <%= f.select :amount, *[1..10],  class:"form-control" %>
          <%= f.submit 'CartItem', class:"btn btn-success" %>
        <% end %>
      </td>
      <td><%= cart_item.item.price %></td>
      <% end %>
    </tr>
  </tbody>
</table>