<div class="container">
  <div class="row justify-content-center m-md-5">
    <div class="col-md-10 m-2">
      <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
      <table >
        <tbody>
          <tr>
            <th class="col-sm-4">氏名</th>
            <td class="col-sm-4"><%= f.text_field :first_name %></td>
            <td class="col-sm-4"><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <th class="col-sm-4">フリガナ</th>
            <td class="col-sm-4"><%= f.text_field :first_name_kana %></td>
            <td class="col-sm-4"><%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <th class="col-sm-4">郵便番号</th>
            <td class="col-sm-4"><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th class="col-sm-4">住所</th>
            <td class="col-sm-4"><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th class="col-sm-4">電話番号</th>
            <td class="col-sm-4"><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <th class="col-sm-4">メールアドレス</th>
            <td class="col-sm-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-between">
        <div class="col-sm-6 py-2"><%= f.submit "編集完了", class:"btn btn-sm btn-success" %></div>
        <div class="col-sm-6 py-2"><%= link_to "退会する", withdrawal_public_customer_path(@customer.id), class:"btn btn-sm btn-danger" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>