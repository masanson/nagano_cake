

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
      <table>
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :first_name %></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :first_name_kana %></td>
            <td><%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "編集完了", class:"btn btn-sm btn-success" %>
      <% end %>
      <%= link_to "退会する", withdrawal_public_customer_path(@customer.id), class:"btn btn-sm btn-danger" %>
    </div>
  </div>
</div>