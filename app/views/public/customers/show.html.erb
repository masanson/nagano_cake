<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class=" p-3">マイページ</h2>
      <div class="row">
        <h4 class="col-sm-3 py-2">登録情報</h4>
        <div class="col-sm-4 py-2"><%= link_to "編集する", edit_public_customer_path(@customer.id), class:"btn btn-success" %></div>
      </div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th>〒 <%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <h4 class="col-sm-3 py-2">配送先</h4>
        <div class="col-sm-4 py-2"><%= link_to "一覧を見る", public_addresses_path, class:"btn btn-primary" %></div>
      </div>
      <div class="row">
        <h4 class="col-sm-3 py-2">注文履歴</h4>
        <div class="col-sm-4 py-2"><%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary" %></div>
      </div>

    </div>
  </div>
</div>
