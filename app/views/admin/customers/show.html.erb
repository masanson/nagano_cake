<div class="container">
  <div class="row p-md-2">
    <div class="col-md-8 offset-md-1">
    <table>
      <h3><%= @customer.first_name %>さんの会員詳細</h3>
      <tbody>
        <tr></tr>
        <tr>
          <th>会員ID</th>
          <td class="p-md-2"><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td class="p-md-2"><%= @customer.name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td class="p-md-2"><%= @customer.name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td class="p-md-2">〒 <%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="p-md-2"><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td class="p-md-2"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td class="p-md-2"><%= @customer.email %></td>
        </tr>
        <tr>
           <th>会員ステータス</th>
           <td class="p-md-2"><%= @customer.is_deleted_status %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
    </div>
  </div>
</div>