<div class="container">
  <div class="row justify-content-center m-md-5">
    <div class="col-10">
      <table class="px-md-2 my-md-2">
        <h3 class="px-md-1 my-md-1"><%= @customer.first_name %>さんの会員詳細</h3>
        <tbody>
          <tr>
            <th>会員ID</th>
            <td class="px-5"><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td class="px-5"><%= @customer.name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="px-5"><%= @customer.name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td class="px-5">〒 <%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="px-5"><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td class="px-5"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="px-5"><%= @customer.email %></td>
          </tr>
          <tr>
             <th>会員ステータス</th>
             <td class="px-5"><%= @customer.is_deleted_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
  </div>
</div>