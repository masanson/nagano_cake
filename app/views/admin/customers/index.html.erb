<div class="container">
  <div class="row justify-content-center m-md-6">
    <div class="col-md-8 offset-md-1">
      <h3>会員一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員Id</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                 <%= customer.name %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted_status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row justify-content-center"><%= paginate @customers %></div>
</div>
