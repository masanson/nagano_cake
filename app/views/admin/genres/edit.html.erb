<h1>Admin::Genres#edit</h1>
<p>Find me in app/views/admin/genres/edit.html.erb</p>

<%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="form-group">
    <label for="genre_name">Name</label>
    <%= f.text_field :name, class:"form-control name" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update genre', class:"btn btn-secondary" %>
  </div>
<% end %>