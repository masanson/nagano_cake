<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>


<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="form-group">
    <label for="genre_name">Title</label>
    <%= f.text_field :name, class:"form-control genre_name" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create genre', class:"btn btn-success" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>