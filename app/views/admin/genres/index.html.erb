<div class="container">
  <h4 class="mt-5">ジャンル一覧・追加</h4>
  <div class="row justify-content-center m-md-5">
    <div class="col-md-10 m-2">
      
      <div class="row justify-content-between">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table>
          <tbody>
            <tr>
              <th class="col-sm-4">ジャンル名</th>
              <td class="col-sm-4"><%= f.text_field :name %></td>
              <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
      
      <div class="row justify-content-between pt-5">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</div>