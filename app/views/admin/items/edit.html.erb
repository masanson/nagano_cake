<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="item_image">Image</label>
      <%= f.file_field :sweets_image, placeholder: "item_image", accept: "image/*", class:"form-control-file item_image" %>
    </div>
    <div class="form-group">
      <label for="item_name">Title</label>
      <%= f.text_field :name, class:"form-control item_name" %>
    </div>
    <div class="form-group">
      <label for="item_opinion">Opinion</label>
      <%= f.text_area :introduction, class:"form-control item_body" %>
    </div>
    
    <label for="item_price">Opinion</label>
      <%= f.text_area :price, class:"form-control item_price" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create item', class:"btn btn-success" %>
    </div>
  <% end %>
</div>