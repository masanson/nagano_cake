<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="item_image">Image</label>
      <%= f.file_field :sweets_image, placeholder: "item_image", accept: "image/*", class:"form-control-file item_image" %>
    </div>
    
    <div class="form-group">
      <label for="item_name">Title</label>
      <%= f.text_field :name, class:"form-control item_name" %>
    </div>
    
    <div class="form-group">
      <label for="item_opinion">Opinion</label>
      <%= f.text_area :introduction, class:"form-control item_body" %>
    </div>
    
    <div class="form-group">
      <label for="item_genre">genre</label>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class:"form-control genre_id" %>
    </div>
    
    <div class="form-group">
    <label for="item_price">price</label>
      <%= f.text_area :price, class:"form-control item_price" %>
    </div>
    
    <div class="form-group">
    <label for="sale_sale">sale_status</label>
      <%= f.label :is_on_sale_ture, "販売中", value: true, class:"form-control sale_status" %>
      <%= f.radio_button :is_on_sale, true, class:"form-control sale_status" %>
      <%= f.label :is_on_sale_false, "販売中止", value: false, class:"form-control sale_status" %>
      <%= f.radio_button :is_on_sale, false, class:"form-control sale_status" %>
    </div>
    
    <div class="form-group">
      <%= f.submit 'Create item', class:"btn btn-success" %>
    </div>
  <% end %>
</div>